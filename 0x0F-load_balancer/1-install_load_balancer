#!/bin/env bash
# this script configures the load balancer
sudo apt-get -y update
sudo apt-get -y upgrade
sudo apt-get install --no-install-recommends software-properties-common -y
sudo add-apt-repository ppa:vbernat/haproxy-2.7
sudo apt-get install haproxy -y
echo "ENABLED=1" >> /etc/default/haproxy
# sudo mv /etc/haproxy/haproxy.cfg{,.original}
# sudo touch /etc/haproxy/haproxy.cfg 

sudo printf %s "\nfrontend apps_server
	bind *:80
	mode http
	default_backend apps
backend apps
	mode http
	balance roundrobin
	server 144185-web-01 34.229.189.127:80  check
	server 144185-web-02 54.234.70.193:80   check" | sudo tee -a /etc/haproxy/haproxy.cfg


start() {
	sudo service haproxy start
	}
restart() {
	sudo service haproxy restart
}
stop() {
	sudo service haproxy stop
}

reload() {
	sudo service haproxy reload
}

enable() {
	sudo service haproxy enable
}
